<form method="DELETE" 
    action="{{ path('admin_assignment_delete', {'id': assignment.id}) }}"
    class="d-inline"
    onsubmit="return confirm('Are you sure you want to remove this assignment?');">
                                       
    <input type="hidden" name="token" value="{{ csrf_token('delete-assignment-' ~ assignment.id) }}"> 
    <button type="submit" class="btn btn-sm btn-outline-danger">
        <i class="bi bi-trash"></i> Remove
    </button>
</form>