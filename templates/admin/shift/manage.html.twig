{% extends 'base.html.twig' %}

{% block title %}Manage Shift: {{ shift.startTime|date('H:i') }} - {{ shift.endTime|date('H:i') }} on {{ shift.date|date('Y-m-d') }}{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="mb-4 text-primary">Manage Shift</h1>

    <!-- Shift Details Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Shift Details</h5>
        </div>
        <div class="card-body">
            <p><strong>Date:</strong> {{ shift.date|date('l, F jS Y') }}</p>
            <p><strong>Starts:</strong> {{ shift.startTime|date('H:i') }}</p>
            <p><strong>Ends:</strong> {{ shift.endTime|date('H:i') }}</p>
            <p><strong>Notes:</strong> {{ shift.notes|nl2br }}</p>
        </div>
    </div>

    <!-- Assignments Section -->
    <h2 class="mb-3 text-secondary">Assignments</h2>

    {% if assignmentsByPosition is not empty %}
        {% for positionName, assignmentsInPosition in assignmentsByPosition %}
            <div class="card shadow-sm mb-3">
                <div class="card-header bg-secondary text-white">
                    <h6 class="mb-0">Position: <strong>{{ positionName }}</strong></h6>
                </div>
                <ul class="list-group list-group-flush">
                    {% for assignment in assignmentsInPosition %}
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                {% if assignment.staffProfile %}
                                    <span class="fw-bold">{{ assignment.staffProfile.name }}</span>
                                {% else %}
                                    <span class="text-muted fst-italic">Unassigned</span>
                                {% endif %}
                            </div>
                            <div class="d-flex align-items-center">

                                {% set assignmentStatuses = enum('App\\Enum\\AssignmentStatus').cases() %} 
                                
                                <form method="post" 
                                    action="{{ path('admin_assignment_update_status', {'id': assignment.id}) }}"
                                    class="d-inline-flex align-items-center me-2"
                                    >
                                    <input type="hidden" name="token" value="{{ csrf_token('update-assignment-' ~ assignment.id) }}">

                                    <select name="status" class="form-select form-select-sm me-2" style="width: auto;">
                                        {% for statusCase in assignmentStatuses %}
                                            <option value="{{ statusCase.value }}" {{ assignment.status == statusCase ? 'selected' : '' }}>
                                                {{ statusCase.value }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-check-lg"></i> Save
                                    </button>
                                </form>

                                <form method="DELETE" 
                                    action="{{ path('admin_assignment_delete', {'id': assignment.id}) }}"
                                    class="d-inline">
                                    <input type="hidden" name="token" value="{{ csrf_token('delete-assignment-' ~ assignment.id) }}">

                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Remove
                                    </button>
                                </form>
                            </div>
                        </li>
                    {% else %}
                        <li class="list-group-item text-center text-muted">No assignments for this position.</li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}
    {% else %}
        <div class="alert alert-warning text-center" role="alert">
            No assignments available for this shift.
        </div>
    {% endif %}
    
    <div class="mt-4 text-center">
        {# <a href="{{ path('admin_shift_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Shifts List
        </a> #}
    </div>
</div>
{% endblock %}
